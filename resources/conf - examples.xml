				</FileImporter>
			</EventAction>
		</Actions>
	</MonitorEvent>
	 
  
	<MonitorEvent xsi:type="DatabaseEvent" ExecuteIntervalSeconds="10" DelayStartSeconds="10" Name="Card Xml Export">
		<Query>
			<![CDATA[
			SELECT id, lastname, firstname, valid_to, state FROM card_state WHERE state_name='Active' ORDER BY id;
		  ]]>
